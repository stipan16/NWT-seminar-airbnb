@model seminarNwtAirBnb.Models.SmjestajnaJedinica

@{
    ViewBag.Title = "Details";
}

<h2>Smjestajna jedinica</h2>
<div class="row">
      <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="@Model.SlikaSMJSource" width="400" height="500" />
            </div>
        </div>
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <div class="panel panel-default">
                    <div class="panel-heading">Detalji</div>
                    <div class="panel-body">
                        <p></p>
                        <ul class="list-group">
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.Naziv)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Naziv)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.Opis)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Opis)
                                </dd>
                            </dl>
                        </ul>
                    </div>
                    </div>
                </div>
            </div>
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <div class="panel panel-default">
                        <!-- Default panel contents -->
                        <div class="panel-heading">Komentari</div>
                        <div class="panel-body">
                            <p></p>
                            <ul class="list-group">

                                @foreach (var kom in Model.Komentari)
                                {
                                    <a class="list-group-item active">
                                        <h5 class="list-group-item-heading">@kom.KometnarKorisnik.Ime</h5>
                                        <p class="list-group-item-text">@kom.tekst</p>
                                        <p class="list-group-item-text">@kom.DateTime</p>
                                    </a>
                                    <p></p>
                                }
                            </ul>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="napisi nesto">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">Komentiraj!</button>
                                </span>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
            </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.SmjestajnaJedinicaID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
