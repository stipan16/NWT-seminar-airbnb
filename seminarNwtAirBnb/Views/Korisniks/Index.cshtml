@model IEnumerable<seminarNwtAirBnb.Models.Korisnik>

@{
    ViewBag.Title = "Index";
}

<style>
    body {
        background-image:none;
    }
</style>
   <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SlikaKorisnika)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prezime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.SlikaSource" width="75" height="90" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prezime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.KorisnikID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.KorisnikID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.KorisnikID })
                </td>
            </tr>
        }

    </table>